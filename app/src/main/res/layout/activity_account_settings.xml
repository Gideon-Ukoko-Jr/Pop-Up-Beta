<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountSettingsActivity"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:src="@drawable/ic_back_ios_24"
        app:tint="#bb0000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_15sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="Username"
                android:textSize="@dimen/_25sdp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <ImageView
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_marginStart="@dimen/_100sdp"
                android:src="@drawable/ic_add_photo_24"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="demo@gmail.com"
            android:textColor="#bb0000"
            android:textSize="@dimen/_13sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_25sdp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Account Settings"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="#f1f4f8"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Verify Self"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:gravity="start|center_vertical"
            android:padding="@dimen/_10sdp"
            app:backgroundTint="@color/white"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_18sdp"
            android:drawableEnd="@drawable/ic_arrow_right_24"
            android:drawablePadding="@dimen/_45sdp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:gravity="start|center_vertical"
            android:padding="@dimen/_10sdp"
            app:backgroundTint="@color/white"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_18sdp"
            android:drawableEnd="@drawable/ic_arrow_right_24"
            android:drawablePadding="@dimen/_45sdp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Updates"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:gravity="start|center_vertical"
            android:padding="@dimen/_10sdp"
            app:backgroundTint="@color/white"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_18sdp"
            android:drawableEnd="@drawable/ic_arrow_right_24"
            android:drawablePadding="@dimen/_45sdp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Business"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:gravity="start|center_vertical"
            android:padding="@dimen/_10sdp"
            app:backgroundTint="@color/white"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_18sdp"
            android:drawableEnd="@drawable/ic_arrow_right_24"
            android:drawablePadding="@dimen/_45sdp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reach me"
            android:textSize="@dimen/_20sdp"
            android:gravity="center"
            android:background="#f1f4f8"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/_5sdp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Socials"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:gravity="start"
            android:padding="@dimen/_10sdp"
            app:backgroundTint="@color/white"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_18sdp"
            android:drawableEnd="@drawable/ic_arrow_right_24"
            android:drawablePadding="@dimen/_45sdp"/>

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Logout"
            android:textAllCaps="false"
            android:backgroundTint="#bb0000"
            android:textColor="@color/white"
            android:textSize="@dimen/_13sdp"
            android:textAlignment="center"
            android:padding="@dimen/_5sdp"
            android:background="@drawable/button_background"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_marginEnd="@dimen/_25sdp"/>

    </LinearLayout>
</RelativeLayout>